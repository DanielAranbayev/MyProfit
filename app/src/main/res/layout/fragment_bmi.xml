<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BmiFragment"
    android:background="@color/white"
    android:id="@+id/bmifragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fragment_design"
        android:orientation="vertical">
        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text=" חישוב BMI"
            android:textStyle="bold"
            android:textSize="25dp"/>
        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Enter Your Weight:  "
                android:textStyle="bold"
                android:textSize="20dp"/>
            <EditText
                android:layout_width="120dp"
                android:layout_height="32dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/edit_textback"
                android:hint="[km]"
                android:gravity="center"
                android:id="@+id/WeightET"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Enter Your Height:  "
                android:textStyle="bold"
                android:textSize="20dp"/>
            <EditText
                android:layout_width="120dp"
                android:layout_height="32dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/edit_textback"
                android:hint="[cm]"
                android:gravity="center"
                android:id="@+id/HeightET"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="center"
            android:text="BMI:"
            android:textStyle="bold"
            android:textSize="19dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="47dp"
            android:id="@+id/BmiTV"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="center"
            android:text="Result:"
            android:textStyle="bold"
            android:textSize="19dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="47dp"
            android:id="@+id/ResultTV"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="calculate"
            android:textColor="#000000"
            android:background="@drawable/lineardesing"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/btnCalculate"/>
    </LinearLayout>
</FrameLayout>